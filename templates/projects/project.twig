{% import '_includes/macros' as macros %}

{% extends "_layouts/standard" %}

{% block content %}
	<main id="content">
		<div class="c-main">
			{% include "_includes/components/sidenav" %}

			<section class="l-section" id="project">
				<article class="c-project__single-items">
					<div class="c-project__single-images">
						<div class="c-project__single-desktop-image">
							{% set image = entry.desktopImage.one() ?? null %}
							{% set srcset = craft.image.srcset(image, [420,480,650,800]) %}
							{% if image %}
								<img src="{{ image.getUrl({width: 800}) }}" srcset="{{ srcset }}" sizes="(min-width: 50em) 50vw, 100vw" alt="{{ image.alt }}">
							{% endif %}
						</div>
						<div class="c-project__single-mobile-image">
							{% set mobileImage = entry.mobileImage.one() ?? null %}
							{% if mobileImage %}
								<img src="{{ mobileImage.getUrl() }}">
							{% endif %}
						</div>
					</div>
					<div class="c-project__single-details">
						<h2 class="h3 u-mb-1">{{ entry.projectTitle }}</h2>
						<h4 class="h4">{{ entry.projectSubtitle }}</h4>
						<span class="c-project__single-link">
							<a href="{{ entry.projectLink }}">Visit</a>
						</span>
						<p class="c-project__single-details-copy">{{ entry.projectDetails }}</p>
					</div>
				</article>
			</section>
		</div>
	</main>
{% endblock %}
